+component('aea-theme')
    | {{ yield }}

+component('aea-menu')
    aside.main-sidebar.debug.collapsed
        button.btn.btn-default.main-sidebar-button(type="button"): i.glyphicon.glyphicon-menu-hamburger
        nav.main-sidebar-navigation
            ul.sidebar-menu
                li {{yield}}
                +each('menu')
                    | {{#if .subMenu}}
                    li.menu-item-has-submenu
                        .anchor
                            span.menu-item-icon(class="{{#if .icon}}{{.icon}}{{/if}}")
                            span.menu-item-title
                                | {{ .title }}
                            span.menu-item-dropdown.glyphicon.glyphicon-chevron-down.pull-right

                        ul.sub-menu
                            +each('subMenu')
                                li
                                    a(href="{{ .url }}" class="{{#if selected === .url}}active{{/if}}")
                                        span.menu-item-icon(class="{{#if .icon}}{{.icon}}{{/if}}")
                                        span.menu-item-title
                                            | {{ .title }}
                    | {{else}}
                    li
                        a(href="{{ .url }}" class="{{#if selected === .url}}active{{/if}}")
                            span.menu-item-icon(class="{{#if .icon}}{{.icon}}{{/if}}")
                            span.menu-item-title
                                | {{ .title }}
                    | {{/if}}
+component('aea-content')
    .container-fluid.content-wrapper
        .row
            .col-md-12
                | {{yield header}}
            .col-md-12
                | {{yield body}}
