//- Display element
+iff('inline')
    .ui.label(class="{{class}} {{_guid}}_button" style="{{style}}; cursor: pointer;") {{yield}}
+else
    .ui.button(class="{{class}} {{_guid}}_button" style="{{style}}") 
        | {{yield}}
+endif

//- Popup
//- -----
.ui.custom.popup.top.left.transition.hidden(class="{{_guid}}")
    .ui.equal.width.centered.grid
        .row
            .column 
                .ui.input(class="{{#error}}error{{/}}")
                    input(type="{{~/['input-type']}}" value="{{new_value}}" "{{#error}}disabled=''{{/}}")
        .row 
            .column 
                .ui.icon.button(on-click="revert" class="{{#_unchanged || error}}disabled{{/}}") 
                    i.undo.icon 
                    | 
                    | Revert
            .column
                .ui.icon.button.green(on-click="accept" class="{{#_unchanged || error}}disabled{{/}}") 
                    i.check.icon
                    |
                    | Accept

.ui.modal