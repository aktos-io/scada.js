.ui.button(
    on-click="_click"
    title="{{tooltip}}"
    class="                                                         \
        {{ class }}                                                 \
        ack-button                                                  \
        {{#icon}}icon{{/}}                                          \
        {{#if state === 'doing' || state === 'done' || state === 'error' }}    \
            {{#custom}}                                             \
                labeled icon                                        \
            {{/}}                                                   \
        {{/if}}                                                     \
        {{#if disabled || selfDisabled || !enabled}}disabled{{/if}} \
        {{#if state === 'doing'}}disabled loading{{/if}}                    \
        {{#active}}active{{/}}                                      \
        "
    type="{{ type }}"
    style="{{ style }} {{#transparent}}background-color: transparent;{{/}}"
    )
    +unless('custom')
        +iff('state === "doing"')
            +iff('heartbeat')
                i.icon.heart
            +else
                i.icon(style="z-index: 99999")
                    .ui.active.mini.inverted.loader
            +endif
        +elif('state === "done"')
            i.icon.checkmark
        +elif('state === "error"')
            i.warning.sign.icon
        +else
            +if('icon')
                i.icon(class="{{icon}}")
        +endif
    | {{yield}}
